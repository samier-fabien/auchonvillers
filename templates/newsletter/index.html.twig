{% extends 'base.html.twig' %}

{% block title %}{% trans %}Actualités{% endtrans %}{% endblock %}

{% block body %}
<div class="container-fluid py-5">
	<section class="container">
		<div class="mb-5">
			<h1 class="text-center text-dark title-section">{% trans %}Actualités{% endtrans %}</h1>
		</div>
		<div class="row row-cols-1 row-cols-xs-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-4">
			{% for newsletter in newsletters %}
			<div class="col mb-4 d-flex">
				<article class="col card bg-light text-dark shadow align-self-stretch">
					<img class="card-img p-0" src="{{ asset(newsletter.thumb) | imagine_filter('my_thumb') }}" alt="{% trans %}Image introductive relative à l'évènement.{% endtrans %}">

					<div class="card-img-overlay p-4 d-flex flex-column flex-grow hidden-background">
						<div class="mb-auto mt-auto text-center">
							<a class="hidden-button btn btn-lg btn-outline-dark px-5 fs-2 fw-bolder" href="/{{ app.request.locale }}/actualite/{{ newsletter.id }}">{% trans %}Voir{% endtrans %}</a>
						</div>
					</div>

					<div class="card-body">
						<h5 class="card-title fs-4">{% trans %}Le{% endtrans %} {{ newsletter.createdAt | date('d-m-Y') }}</h5>
						<p class="card-text fs-5">{{ newsletter.content}}</p>
					</div>
				</article>
			</div>
			{% endfor %}
		</div>
	</section>
    {{ include('components/pagination.html.twig') }}
</div>
{% endblock %}