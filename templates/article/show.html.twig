{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<section>
    <h1>{% trans %}Article{% endtrans %}</h1>
    <div>
        <h2>
            {{ article.title|capitalize }}
        </h2>
        <p>
            {{ article.content|raw }}
        </p>
    </div>
</section>

{% if is_granted('ROLE_AGENT') or is_granted('ROLE_MAYOR') or is_granted('ROLE_ADMIN') %}
    <a href="/{{ app.request.locale }}/article/{{ article.id }}/agent/editer" class="text-light text-decoration-none"><button class="btn btn-primary">{% trans %}Editer{% endtrans %}</button></a>
    {{ include('article/_delete_form.html.twig') }}
{% endif %}

    
{% endblock %}
