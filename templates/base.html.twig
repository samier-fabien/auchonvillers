<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% block nav %}
            <a href="/{{ app.request.locale }}/">{% trans %}Accueil{% endtrans %}</a>
            <a href="/{{ app.request.locale }}/actualites/1">{% trans %}Actualités{% endtrans %}</a>
            <a href="/{{ app.request.locale }}/evenements/1">{% trans %}Evènements{% endtrans %}</a>
            <a href="/{{ app.request.locale }}/votes/1">{% trans %}Votes{% endtrans %}</a>
            {% if is_granted('ROLE_AGENT') or is_granted('ROLE_MAYOR') or is_granted('ROLE_ADMIN') %}
                <a href="/{{ app.request.locale }}/gestion">{% trans %}Gestion{% endtrans %}</a>
            {% endif %}
            {# Si l'utilisateur est connecté on affiche son email et le lien vers deconnexion sinon le lien vers connexion #}
            {% if is_granted('ROLE_USER') or is_granted('ROLE_AGENT') or is_granted('ROLE_MAYOR') or is_granted('ROLE_ADMIN') %}
                {{ app.user.email }}
                <a href="/{{ app.request.locale }}/deconnexion">{% trans %}Deconnexion{% endtrans %}</a>
            {% else %}
                <a href="/{{ app.request.locale }}/connexion">{% trans %}Connexion{% endtrans %}</a>
            {% endif %}
            {# Liste dans la variable globale - définie dans services.yaml et envoyée dans la vue par twig.yaml - celles qui ne sont pas la langue active #}
            {% for locale in locales|filter(locale => locale != app.request.locale) -%}
                <a href="/langue/{{ locale }}">{{ locale }}</a>
            {% endfor %}
        {% endblock %}

        {% block flashMessages %}
            {# Affiche les messages flash #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
        
        {% block body %}{% endblock %}
    </body>
</html>
