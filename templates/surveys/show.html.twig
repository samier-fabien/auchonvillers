{% extends 'base.html.twig' %}

{% block title %}Enquête{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex flex-row flex-wrap mb-5">
        <h1 class="flex-grow-1 text-center text-dark title-section">{% trans %}Enquête{% endtrans %}</h1>
        <div class="d-flex flex-row justify-content-end me-auto ms-auto">
        {% if is_granted('ROLE_AGENT') or is_granted('ROLE_MAYOR') or is_granted('ROLE_ADMIN') %}
            <a class="d-flex pe-4 text-light text-decoration-none" href="/{{ app.request.locale }}/enquete/{{ datas.survey.id }}/agent/editer"><button class="btn btn-outline-warning">{% trans %}Editer{% endtrans %}</button></a>
            {{ include('surveys/_delete_form.html.twig') }}
        {% endif %}
        </div>
    </div>
</div>
<section class="container bg-white shadow p-5 ckeditor my-5">
    <article>
        {{ datas.survey.content|raw }}
    </article>
    <div>
        <p>{% trans %}Du{% endtrans %} {{ datas.survey.begining|date('d-m-Y H\\hi') }} {% trans %}au{% endtrans %} {{ datas.survey.end|date('d-m-Y H\\hi') }}.</p>
    </div>
    {{ include('surveys/_form_new_opinion.html.twig') }}
    {{ include('surveys/_delete_opinion_form.html.twig') }}
</section>
{% endblock %}
