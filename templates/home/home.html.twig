{% extends 'base.html.twig' %}

{% block title %}{% trans %}Accueil{% endtrans %}{% endblock %}

{% block body %}
<section>
    <h1>{% trans %}Actualités{% endtrans %}</h1>
    {% for newsletter in newsletters %}
    <div>
        <h2>{% trans %}Publié le{% endtrans %} {{ newsletter.newCreatedAt|date('Y-m-d') }}</h2>
        <p>{{ attribute(newsletter, 'newContent'~app.request.locale|capitalize)|length > 25 ? attribute(newsletter, 'newContent'~app.request.locale|capitalize)|slice(0,25) ~ '...' : attribute(newsletter, 'newContent'~app.request.locale|capitalize) }}</p>

        <a href="/actualite/{{ newsletter.id }}">{% trans %}Voir{% endtrans %}</a>
    </div>
    {% endfor %}
    <div>
        <a href="/actualites/{{ 1 }}">{% trans %}Tout voir{% endtrans %}</a>
    </div>
</section>
<section>
    <h1>{% trans %}Agenda{% endtrans %}</h1>
    <div>
        {% for action in actions %}
        <h2>{{ action.actTitleFr }}</h2>
        <p>{% trans %}Du{% endtrans %} {{ action.actBegining|date('Y-m-d') }} {% trans %}au{% endtrans %} {{ action.actEnd|date('Y-m-d') }}</p>
        <a href="#">{% trans %}Voir{% endtrans %}</a>
        {% endfor %}
    </div>
    <div>
        <a href="#">{% trans %}Tout voir{% endtrans %}</a>
    </div>
</section>
{% endblock %}
